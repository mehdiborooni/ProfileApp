@model ProfileApp.Models.Profile

<h2>Create</h2>

<hr />

<form asp-action="Create" asp-controller="Profile" method="post">

    <p>
        <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
    </p>
    <p>
        <input asp-for="LastName" class="form-control" placeholder="LastName" />
    </p>
    <p><select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-control" placeholder="Gender"></select></p>
    <p>
        <input asp-for="Desc" class="form-control" placeholder="Desc" />
    </p>
    <p>
        <input asp-for="Phone" class="form-control" placeholder="Phone" />
    </p>
    <p>
        UserActive:  <select asp-for="IsActive" asp-items="Html.GetEnumSelectList<IsActiveType>()" class="form-control" placeholder="IsActive"></select>
    </p>

    <p>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-controller="Profile">Back to list</a>
    </p>
</form>