@using Microsoft.AspNetCore.Razor.Language.Intermediate
@using Microsoft.EntityFrameworkCore.Infrastructure
@model ProfileApp.Models.Profile
@{
    var timecreated = Model.TimeCreated.ToUniversalTime();
}

<h2>Edit</h2>

<hr/>

<form asp-action="Edit" asp-controller="Profile" method="post">
    <input asp-for="Id" hidden />
    <input name="timecreated" value="@timecreated" hidden />
    @*<input asp-for="TimeEdited" hidden />*@

    <p><input asp-for="FirstName" class="form-control" placeholder="FirstName" /></p>
    <p><input asp-for="LastName" class="form-control" placeholder="FirstName" /></p>
    <p><select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-control" placeholder="Gender"></select></p>
    <p><textarea asp-for="Desc" class="form-control" placeholder="Desc"></textarea></p>
    <p><input asp-for="Phone" class="form-control" placeholder="FirstName" /></p>
    <p><select asp-for="IsActive" asp-items="Html.GetEnumSelectList<IsActiveType>()" class="form-control" placeholder="IsActive"></select></p>
    <p>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-controller="Profile">Back to list</a>
    </p>
</form>